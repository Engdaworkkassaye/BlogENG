 <section class="section">
        <div class="container">
            <h1 class="title">Create New Post</h1>
            <form action="/posts" method="POST">
                <div class="field">
                    <label class="label">Title</label>
                    <div class="control">
                        <input class="input" type="text" name="title" placeholder="Enter the title" required>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Content</label>
                    <div class="control">
                        <textarea class="textarea" name="content" placeholder="Enter the content" required></textarea>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button class="button is-primary" type="submit">Create Post</button>
                    </div>
                </div>
            </form>
        </div>
    </section>