<!-- editPost.hbs -->

<section class="section">
    <div class="container">
        <h1 class="title is-1">Edit Post</h1>
        <form action="/editPost/{{post.dataValues.id}}" method="POST">
            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <input class="input" type="text" name="title" value="{{post.dataValues.title}}" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Content</label>
                <div class="control">
                    <textarea class="textarea" name="content" required>{{post.dataValues.content}}</textarea>
                </div>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link" type="submit">Update Post</button>
                </div>
                <div class="control">
                    <a href="/dashboard" class="button is-text">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>
